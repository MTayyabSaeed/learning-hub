<html lang="en">


     <%- include left_sidebar %>
   <!-- Main component for a primary marketing message or call to action -->
      <div class="jumbotron col-sm-9" id="mainform">
            <div id="signupbox" style=" margin-top:5px" class="mainbox">
                                                           
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">Edit Question</div>
                        </div> 
                        <div class="panel-body" >
							<form class="form-horizontal" role="form" action="" method="post" class="form-horizontal">
							
							<div class="form-group">
                                <label for="chapter_name" class="col-md-3 control-label">Title</label>
                                    <div class="col-md-9">
                                        <input class="form-control" name="question" placeholder="Question" value="<%= data[0].question%>"  required="" type="text">
                                    </div>
                                </div>
							<div class="form-group">
                                    <label for="option1" class="col-md-3 control-label">Option1</label>
                                    <div class="col-md-9">
                                        <input class="form-control" name="option1" placeholder="enter option 1" value="<%= data[0].option1%>" required="" type="text"><input type="radio" name="answer" value="option1" <% if(data[0].answer == "option1"){ %>checked<% } %> required />
                                    </div>
                                </div>
							<div class="form-group">
                                    <label for="option2" class="col-md-3 control-label">Option2</label>
                                    <div class="col-md-9">
                                        <input class="form-control" name="option2" placeholder="enter option 2" value="<%= data[0].option2%>" required="" type="text"><input type="radio" name="answer" value="option2" <% if(data[0].answer == "option2"){ %>checked<% } %> required />
                                    </div>
                                </div>								
							<div class="form-group">
                                    <label for="option3" class="col-md-3 control-label">Option 3</label>
                                    <div class="col-md-9">
                                        <input class="form-control" name="option3" placeholder="enter option 3" value="<%= data[0].option3%>" required="" type="text"><input type="radio" name="answer" value="option3" <% if(data[0].answer == "option3"){ %>checked<% } %> required />
                                    </div>
                                </div>								
							<div class="form-group">
                                    <label for="option4" class="col-md-3 control-label">Option 4</label>
                                    <div class="col-md-8">
                                        <input class="form-control" name="option4" placeholder="enter option 4" value="<%= data[0].option4%>" type="text"><input type="radio" name="answer" value="option4" <% if(data[0].answer == "option4"){ %>checked<% } %> />
                                    </div>
                                </div>
						<div class="form-group">
                                    <!-- Button -->                                       
                                    <div class="col-md-offset-3 col-md-9">
                                        <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp; Submit</button>
                                        
                                    </div>
                                </div>	
							</form>
                         </div>
                    </div>
              
                
         </div>
      </div>
